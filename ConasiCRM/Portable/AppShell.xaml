        <ShellContent Title="Dashboard">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FontAwesomeRegular" Color="Black" Glyph="&#xf11c;" Size="Title"/>
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent>
            <ShellContent.Icon>
                <FontImageSource FontFamily="FontAwesomeRegular" Color="Black" Glyph="&#xf080;" Size="Title"/>
            </ShellContent.Icon>
        </ShellContent>-->
    <FlyoutItem Shell.TabBarIsVisible="False" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Phí mô giới giao dịch" ContentTemplate="{DataTemplate views:PhiMoGioiGiaoDichList}">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Color="Black" Glyph="&#xf155;" Size="Title"/>
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="Hoa hồng giao dịch" ContentTemplate="{DataTemplate views:HoaHongGiaoDichList}">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Color="Black" Glyph="&#xf4c0;" Size="Title"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>
    <MenuItem Text="Đăng xuất" Command="{Binding LogoutCommand}">
        <MenuItem.IconImageSource>
            <FontImageSource FontFamily="FontAwesomeSolid" Color="Black" Glyph="&#xf2f5;" Size="Title"/>
        </MenuItem.IconImageSource>
    </MenuItem>
</Shell>