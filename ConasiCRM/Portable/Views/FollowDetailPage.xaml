<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConasiCRM.Portable.Views.FollowDetailPage"
             xmlns:controls="clr-namespace:ConasiCRM.Portable.Controls"
             xmlns:converters="clr-namespace:ConasiCRM.Portable.Converters"
             xmlns:telerikPrimitives="clr-namespace:Telerik.XamarinForms.Primitives;assembly=Telerik.XamarinForms.Primitives" 
             xmlns:viewmodels="clr-namespace:ConasiCRM.Portable.ViewModels" x:DataType="viewmodels:FollowDetailPageViewModel"
             Title="Danh Sách Theo Dõi">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:GroupConverter x:Key="groupConverter"/>
            <converters:NullToHideConverter x:Key="nullToHideConverter"/>
            <Color x:Key="MasterBackground">#039EBD</Color>
            <Style x:Key="FollowDetailExpanderHeaderStyle" TargetType="telerikPrimitives:ExpanderHeader">
                <Setter Property="IndicatorText" Value="&#xf105;"/>
                <Setter Property="IndicatorLocation" Value="End"/>
                <Setter Property="IndicatorFontSize" Value="18"/>
                <Setter Property="IndicatorColor" Value="#000000"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="BorderColor" Value="Gray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="IndicatorAnimationDuration" Value="50"/>
                <Setter Property="IndicatorFontFamily" Value="FontAwesomeSolid"/>
            </Style>
            <Style x:Key="FollowDetailExpanderTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="#039EBD" />
            </Style>
            <Style x:Key="InforTitleTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="Gray" />
            </Style>
            <Style x:Key="InforTitleIconStyle" TargetType="Label">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="TextColor" Value="Red" />
            </Style>
            <Style x:Key="InforContentTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="5,0,0,0"/>
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style x:Key="TitleFormTextStyle" TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="BackgroundColor" Value="#039EBD"/>
                <Setter Property="Padding" Value="10"/>
            </Style>
            <Style x:Key="TitleContentFormTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Gray"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
            <Style x:Key="ContentFormTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
            <Style x:Key="BorderItemStyle" TargetType="telerikPrimitives:RadBorder" >
                <Setter Property="BorderColor" Value="#f3f3f3"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="Padding" Value="10"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView BackgroundColor="White">
            <StackLayout>
                <Label Text="Thông Tin Cơ Bản" TextColor="Black" Padding="15,10" FontSize="18" FontAttributes="Bold" BackgroundColor="#F3F3F3"/>
                <StackLayout Padding="10,10,10,15">
                    <Label FontSize="15" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Tiêu đề: " TextColor="#777777"/>
                                <Span Text="{Binding FollowDetail.bsd_followuplistcode}" TextColor="#333333"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label FontSize="15" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Tên: " TextColor="#777777"/>
                                <Span Text="{Binding FollowDetail.bsd_name}" TextColor="#333333"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label FontSize="15" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Ngày: " TextColor="#777777"/>
                                <Span Text="{Binding FollowDetail.createdon,StringFormat='{0:dd/MM/yyyy}'}" TextColor="#333333"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label FontSize="15" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Loại: " TextColor="#777777"/>
                                <Span Text="{Binding FollowDetail.type}" TextColor="#333333"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label FontSize="15" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Nhóm: " TextColor="#777777"/>
                                <Span Text="{Binding FollowDetail.bsd_group,Converter={StaticResource groupConverter}}" TextColor="#333333"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label FontSize="15" IsVisible="{Binding FollowDetail.name_work, Converter={StaticResource nullToHideConverter}}" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span x:Name="nameWork" Text="Phiếu đặt cọc: " TextColor="#777777"/>
                                <Span Text="{Binding FollowDetail.name_work}" TextColor="#333333"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label FontSize="15" IsVisible="{Binding FollowDetail.customer, Converter={StaticResource nullToHideConverter}}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Khách hàng: " TextColor="#777777"/>
                                <Span Text="{Binding FollowDetail.customer}" TextColor="#333333"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>

                <telerikPrimitives:RadExpander IsExpanded="False" AutomationId="masterCardExpander">
                    <telerikPrimitives:RadExpander.Header>
                        <telerikPrimitives:ExpanderHeader Style="{StaticResource ExpanderHeaderStyle}">
                            <Label Style="{StaticResource ExpanderHeadingText}" Text="Thông Tin Chi Tiết"/>
                        </telerikPrimitives:ExpanderHeader>
                    </telerikPrimitives:RadExpander.Header>

                    <telerikPrimitives:RadExpander.Content>
                        <StackLayout Padding="10">
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Grid.Column="0">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Dự án" Style="{StaticResource InforTitleTextStyle}"/>
                                                <Span Text="*" Style="{StaticResource InforTitleIconStyle}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Column="1" Text="{Binding FollowDetail.bsd_name_project}" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Grid.Column="0">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Toà nhà/Khu" Style="{StaticResource InforTitleTextStyle}"/>
                                                <Span Text="*" Style="{StaticResource InforTitleIconStyle}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Column="1" Text="Toà nhà/Khu" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Grid.Column="0">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Tầng" Style="{StaticResource InforTitleTextStyle}"/>
                                                <Span Text="*" Style="{StaticResource InforTitleIconStyle}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Column="1" Text="Tiêu đề" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Grid.Column="0">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Căn hộ" Style="{StaticResource InforTitleTextStyle}"/>
                                                <Span Text="*" Style="{StaticResource InforTitleIconStyle}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Column="1" Text="Tiêu đề" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Bảng giá" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="{Binding FollowDetail.totallineitemamount_base_quote}" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Biên độ chênh lệch diện tích (+/-)%" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="Tiêu đề" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Padding="10">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Giá bán" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="{Binding FollowDetail.totalamount_quote}" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                        </StackLayout>
                    </telerikPrimitives:RadExpander.Content>
                </telerikPrimitives:RadExpander>

                <telerikPrimitives:RadExpander IsExpanded="False" AutomationId="masterCardExpander">
                    <telerikPrimitives:RadExpander.Header>
                        <telerikPrimitives:ExpanderHeader Style="{StaticResource ExpanderHeaderStyle}">
                            <Label Style="{StaticResource ExpanderHeadingText}" Text="Giá Trị"/>
                        </telerikPrimitives:ExpanderHeader>
                    </telerikPrimitives:RadExpander.Header>
                    <telerikPrimitives:RadExpander.Content>
                        <StackLayout  Padding="10">
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Ngày hết hạn" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="{Binding FollowDetail.bsd_expiredate,StringFormat='{0}dd/MM/yyyy'}" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Tổng số tiền" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="Tiêu đề" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Đã thanh lý" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="{Binding FollowDetail.bsd_bookingfee_project}" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Phương thức đền bù" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="Tiêu đề" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Style="{StaticResource BorderItemStyle}">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Giá trị đền bù" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="Tiêu đề" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder Padding="10">
                                <Grid ColumnDefinitions="135,*">
                                    <Label Text="Tổng giá trị đền bù" Grid.Column="0" Style="{StaticResource InforTitleTextStyle}"/>
                                    <Label Grid.Column="1" Text="Tiêu đề" Style="{StaticResource InforContentTextStyle}"/>
                                </Grid>
                            </telerikPrimitives:RadBorder>
                        </StackLayout>
                    </telerikPrimitives:RadExpander.Content>
                </telerikPrimitives:RadExpander>

                <telerikPrimitives:RadExpander IsExpanded="False" AutomationId="masterCardExpander">
                    <telerikPrimitives:RadExpander.Header>
                        <telerikPrimitives:ExpanderHeader Style="{StaticResource ExpanderHeaderStyle}">
                            <Label Style="{StaticResource ExpanderHeadingText}" Text="Đã Thanh Lý"/>
                        </telerikPrimitives:ExpanderHeader>
                    </telerikPrimitives:RadExpander.Header>
                    <telerikPrimitives:RadExpander.Content>
                        <StackLayout Padding="10">
                            <telerikPrimitives:RadBorder BorderThickness="1" BorderColor="Gray" BackgroundColor="White" Margin="0,5,0,5">
                                <StackLayout>
                                    <Label Text="Thanh lý" Style="{StaticResource TitleFormTextStyle}"/>
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*">
                                        <Label Text="Thông báo thanh lý" Grid.Row="0" Grid.Column="0" Style="{StaticResource TitleContentFormTextStyle}"/>
                                        <Label Text="Thanh lý" Grid.Row="1" Grid.Column="0" Style="{StaticResource TitleContentFormTextStyle}"/>
                                        <CheckBox Color="Black" Grid.Row="0" Grid.Column="1"/>
                                        <CheckBox Color="Black" IsChecked="True" Grid.Row="1" Grid.Column="1"/>
                                    </Grid>
                                </StackLayout>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder BorderThickness="1" BorderColor="Gray" Margin="0,5,0,5" BackgroundColor="White">
                                <StackLayout>
                                    <Label Text="Bán lại" Style="{StaticResource TitleFormTextStyle}"/>
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*">
                                        <Label Text="Bán lại" Grid.Row="0" Grid.Column="0" Style="{StaticResource TitleContentFormTextStyle}"/>
                                        <Label Text="Đợt mở bán" Grid.Row="1" Grid.Column="0" Style="{StaticResource TitleContentFormTextStyle}"/>
                                        <Label Text="Không" Grid.Row="0" Grid.Column="1" Style="{StaticResource ContentFormTextStyle}"/>
                                        <Label  Grid.Row="1" Grid.Column="1" Style="{StaticResource ContentFormTextStyle}"/>
                                    </Grid>
                                </StackLayout>
                            </telerikPrimitives:RadBorder>
                            <telerikPrimitives:RadBorder BorderThickness="1" BorderColor="Gray" BackgroundColor="White" Margin="0,5,0,5">
                                <StackLayout>
                                    <Label Text="Ý kiến và Quyết định" Style="{StaticResource TitleFormTextStyle}"/>
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*">
                                        <Label Text="Họp xử lý" Grid.Row="0" Grid.Column="0" Style="{StaticResource TitleContentFormTextStyle}"/>
                                        <Label Text="Ý kiến và quyết định" Grid.Row="1" Grid.Column="0" Style="{StaticResource TitleContentFormTextStyle}"/>
                                        <Entry Grid.Row="0" Grid.Column="1" FontSize="16"/>
                                        <Entry Grid.Row="1" Grid.Column="1" FontSize="16"/>
                                    </Grid>
                                </StackLayout>
                            </telerikPrimitives:RadBorder>
                        </StackLayout>
                    </telerikPrimitives:RadExpander.Content>
                </telerikPrimitives:RadExpander>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>